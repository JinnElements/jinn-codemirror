{
  "name": "leiden-grammar",
  "version": "1.0.0",
  "description": "lezer-based grammar for Leiden+",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "lezer-generator src/parser/leiden+/leiden+.grammar -o src/parser/leiden+/parser & rollup -c",
    "prepare": "npm run build",
    "test": "npm run build && mocha test/test-*.js",
    "start": "web-dev-server --open demo/ --watch --node-resolve"
  },
